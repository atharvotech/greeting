<script>
  var query_string = window.location.search;
  var urlParmsArr = new URLSearchParams(query_string);
  var name = urlParmsArr.get('name_query');
  document.getElementsByClassName('q')[0].innerHTML = name
  document.getElementsByClassName('q')[1].innerHTML = name
  var pg = document.getElementsByClassName('q')[0].innerHTML

  if (pg == 'null') {
    document.getElementsByClassName('q')[0].innerHTML = "Atharv"
    document.getElementsByClassName('q')[1].innerHTML = "Atharv"
  }
</script>


